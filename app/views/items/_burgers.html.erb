<div class="food-menu">

  <table class="table-body">
      <thead>
          <th>Name</th>
          <th class="description">Description</th>
          <th>Regular</th>
          <th>Large</th>
      </thead>

      <tbody>
        <% @items.each do |i| %>
          <tr>
              <td><%= i.name %></td>
              <td class="description"><%= i.description %></td>
              <td><%= number_to_currency(i.price) %></td>
              <td><%= number_to_currency(i.price2) %></td>
          </tr>

        <% end %>
      </tbody>
  </table>
</div>

<div class="deluxe">
  <p><span style="font-weight: bold;">Make it a deluxe</span> - add $2.50</p>
  <p>Lettuce, Tomatoes, Pickles, French Fries & Cole Slaw</p>
</div>

<div class="food-container">
  <div class="food burgers1"></div>
  <div class="food burgers2"></div>
  <div class="food burgers3"></div>
</div>

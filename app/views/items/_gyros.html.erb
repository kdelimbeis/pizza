<div class="food-menu">

  <table class="table-body">
      <thead>
          <th>Name</th>
          <th class="description">Description</th>
          <th>Price</th>
      </thead>

      <tbody>
        <% @items.each do |i| %>
          <tr>
              <td><%= i.name %></td>
              <td class="description"><%= i.description %></td>
              <td><%= number_to_currency(i.price) %></td>
          </tr>

        <% end %>
      </tbody>
  </table>
</div>

<div class="deluxe">
  <p style="font-weight: bold;">Served with Pita Bread, Lettuce, Tomatoes, Red Onions, Oregano & Greek Sauce</p>
  <p>Make it a Platter with French Fries and Greek Salad for $2.50 extra</p>
</div>

<div class="food-container">
  <div class="food gyros1"></div>
  <div class="food gyros2"></div>
  <div class="food gyros3"></div>
</div>

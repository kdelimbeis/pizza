<div class="food-menu">

  <table class="table-body">
      <thead>
          <th>Name</th>
          <th class="description">Description</th>
          <th>Regular</th>
          <th>Large</th>
      </thead>

      <tbody>
        <% @items.each do |i| %>
          <tr>
              <td><%= i.name %></td>
              <td class="description"><%= i.description %></td>
              <td><%= number_to_currency(i.price) %></td>
              <td><%= number_to_currency(i.price2) %></td>
          </tr>

        <% end %>
      </tbody>
  </table>
</div>

<div class="deluxe">
  <p style="font-weight: bold;">Served with Garlic Bread & Choice of Dressing:</p>
  <p>Ranch, Russian, French, Creamy Italian, Low-Fat Italian, Caesar, Honey Mustard, Blue Cheese, Greek Dressing</p>
  <p><span style="font-weight: bold;">Extra Dressing</span> - add $0.50</p>
  <p><span style="font-weight: bold;">Extra Blue Cheese Dressing</span> - add $0.75</p>
</div>

<div class="food-container">
  <div class="food salads1"></div>
  <div class="food salads2"></div>
  <div class="food salads3"></div>
</div>
